---
import { getPlayers } from '@/util/get-players'
import type { GroupDetails } from '@/util/stats-api'
import MapsBackground from '@/components/maps-background/maps-background.astro'
import MatchResult from '@/components/match-result/match-result.astro'
import TeamList from '@/components/team-list/team-list.astro'

interface Props {
  group: GroupDetails
}

const { group } = Astro.props
---

<header class="relative grid grid-cols-matchHeader py-6">
  <MapsBackground maps={group.match.maps} />
  <TeamList team="Alpha" players={getPlayers('alpha', group)} />
  <MatchResult group={group} />
  <TeamList team="Beta" players={getPlayers('beta', group)} />
  <div class="absolute inset-x-0 bottom-0 z-20 h-[2px] bg-etl-400"></div>
</header>
