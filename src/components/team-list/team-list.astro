---
import { getColoredNameParts } from '@/util/coloredNames'
import type { Player } from '@/util/stats-api'

interface Props {
  players: Player[]
  team: string
}

const { players, team } = Astro.props
---

<div class="z-10 flex flex-col items-center justify-center gap-8 text-xl">
  <h3 class="text-3xl">{team}</h3>
  <div class="flex flex-col items-center">
    {
      players.map((player) => (
        <div>
          {getColoredNameParts(player.nick).map((part) => (
            <span style={{ color: part.color }}>{part.text}</span>
          ))}
        </div>
      ))
    }
  </div>
</div>
