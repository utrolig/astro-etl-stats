---
import { Awards } from '../../../components/awards/awards'
import Layout from '../../../layouts/Layout.astro'
import MatchHeader from '@/components/match-header/match-header.astro'
import { MatchTable } from '@/components/match-table/match-table'
import { statsApi } from '../../../util/stats-api.ts'

const { groupId } = Astro.params
const data = await statsApi.fetchGroupDetails(Number(groupId))
---

<Layout
  title={`ETL Stats - Group ${groupId}`}
  description={`ETL Stats - Group ${groupId}`}
>
  <MatchHeader group={data} />
  <MatchTable client:load group={data} />
  <Awards data={data} />
</Layout>
